#:import MDRectangleFlatButton kivymd.uix.button.MDRectangleFlatButton

<WifiPage>:
    name: "wifipage"

    canvas.before:
        Color:
            rgba: (52/255, 155/255, 235/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: self.width, self.height

        Label:
            pos_hint: {'x': 0, 'y': 0.3}
            text: "Welcome on board"
            color: (0, 0, 0)
            font_size: 20

        Label:
            pos_hint: {'x': 0, 'y': 0.2}
            text: "Connect your device to your drone, then continue"
            color: (0, 0, 1)
            font_size: 20

        MDRectangleFlatButton:
            text: ">> Let's GO!! <<"
            color: "black"
            pos_hint: {'x': .4, 'y': .2}
            size_hint: .2, .2
            text_color: 1, 1, 0, .7
            line_color: 1, 1, 0, .7
            on_press:
                root.manager.transition.duration = 2
                root.manager.current = "selectmode"
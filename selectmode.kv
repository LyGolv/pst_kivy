#:import MDCard kivymd.uix.card.MDCard
#:import Behavior kivymd.uix.behaviors.RoundedRectangularElevationBehavior

<SelectMode>:
    name: "selectmode"

    AnchorLayout:
        anchor_x:"center"
        anchor_y:"center"

        Image:
            size_hint: (1.6, 1.5)
            source: "back.jpg"
            allow_strech: True


    MDCard:
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: "10dp"
        padding: 15
        size_hint: .5, .5
        radius: 15
        md_bg_color: rgba(191, 182, 187, 70)

        MDLabel:
            text: "Select a Mode"
            halign: "center"
            valign: "center"

        MDRaisedButton:
            focus_behavior: True
            text: "Manuel"
            pos_hint: {"center_x": .5}
            increment_width: "250dp"
            size_hint: 1, .5
            on_press:
                root.switch_to_manual()

